<div class='postlist'>
{% for post in postslist | reverse %}
  <div class='postlist-post'>

      <a href="{{ post.url | url }}">
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </a>

      <time datetime="{{ post.date | htmlDateString }}">
        {{ post.date | readableDate }}
      </time>

      <span class="postlist-post-description">
        {{ post.data.description }}
      </span>

      <div class='taglist'>
        {% for tag in post.data.tags %}

          {% set tagUrl %}/tags/{{ tag }}/{% endset %}

          {% if tag != 'posts' %}
            <a href="{{ tagUrl | url }}" class='tag'>
                {{tag }}
            </a>
          {% endif %}
        {% endfor %}
      </div>


  </div>
{% endfor %}
</div>
